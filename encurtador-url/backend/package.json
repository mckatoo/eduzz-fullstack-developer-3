{
  "name": "encurtador-url",
  "version": "1.0.0",
  "description": "Encurtador de URL com NodeJS, Typescript e MongoDB",
  "scripts": {
    "build": "tsc -p .",
    "dev": "NODE_ENV=test ts-node-dev --respawn --transpile-only --ignore-watch node_modules --no-notify src/server.ts",
    "start": "node ./dist/server.js",
    "test:watch": "jest --watch",
    "test:api": "jest src/api.test.ts",
    "docker:up": "docker compose --file ./docker/stack.yml up --detach",
    "docker:down": "docker compose --file ./docker/stack.yml down"
  },
  "author": "Milton Carlos Katoo",
  "license": "CC-BY-NC-SA-4.0",
  "devDependencies": {
    "@swc/core": "1.2.208",
    "@swc/jest": "0.2.21",
    "@types/cors": "2.8.12",
    "@types/dotenv": "8.2.0",
    "@types/express": "4.17.13",
    "@types/jest": "28.1.4",
    "@types/mongoose": "5.11.97",
    "@types/supertest": "2.0.12",
    "jest": "28.1.2",
    "supertest": "6.2.3",
    "ts-node-dev": "1.1.8",
    "typescript": "4.5.5"
  },
  "dependencies": {
    "cors": "2.8.5",
    "dotenv": "16.0.0",
    "express": "4.17.3",
    "mongoose": "6.2.3"
  }
}
